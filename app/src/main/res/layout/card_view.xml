<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="5dp"
    card_view:cardUseCompatPadding="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp" >
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imgChild"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/childlogo"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"/>

        <TextView
            android:paddingLeft="3dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/imgChild"
            android:id="@+id/tvChildName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="?android:attr/colorPrimary"
            android:textSize="20sp" />

        <TextView
            android:paddingLeft="3dp"
            android:layout_toRightOf="@+id/imgChild"
            android:id="@+id/tvChildDob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvChildName"
            android:layout_centerInParent="true"
            android:layout_marginTop="4dp"
            android:text="DOB"
            android:textColor="?attr/colorError"
            android:textSize="14sp" />
        <TextView
            android:visibility="invisible"
            android:layout_toRightOf="@+id/tvChildName"
            android:id="@+id/tvChildId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="24sp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>